{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [
      "@dcloudio/types",
      "node",
      "@uni-helper/uni-app-types",
      "@uni-helper/uni-ui-types",
      "miniprogram-api-typings"
    ],
    "baseUrl": ".",
    "paths": {
      // 根据别名配置相关路径
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "./*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
